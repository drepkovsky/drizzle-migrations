{
  "name": "@llong2195/drizzle-migrations",
  "version": "1.0.0",
  "description": "Tiny tool for managing migrations in Drizzle",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "release": "pnpm build && pnpm publish --access public"
  },
  "peerDependencies": {
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0"
  },
  "bin": {
    "drizzle-migrations": "dist/cli-entry.cjs"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "console-table-printer": "^2.12.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.snakecase": "^4.1.1",
    "prompts": "^2.4.2",
    "tsx": "^4.16.2"
  },
  "devDependencies": {
    "@types/lodash.camelcase": "^4.3.9",
    "@types/lodash.kebabcase": "^4.1.9",
    "@types/lodash.snakecase": "^4.1.9",
    "@types/node": "^20.14.9",
    "@types/prompts": "^2.4.9",
    "rimraf": "^5.0.8",
    "typescript": "^5.5.3",
    "tsup": "^8.1.0"
  },
  "keywords": [
    "drizzle",
    "migrations",
    "orm",
    "up migration",
    "down migration",
    "rollback",
    "llong2195"
  ],
  "author": "Nguyen Duy Long - llong2195",
  "license": "ISC",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  }
}
